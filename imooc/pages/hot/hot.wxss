/* pages/hot/hot.wxss */
.tabs {
  display: flex;
  padding: 0 120rpx;
  height: 88rpx;
  box-shadow: 0 2px 4px 0 rgba(0,0,0,.1);
}
.tab {
  flex: 1;
  position: relative;
  line-height: 72rpx;
  text-align: center;
  font-size: 36rpx;
  color: #71777d;
}
.active {
  color: #2b333b;
}
.active-bar {
  position: absolute;
  left: 110rpx;
  height: 4rpx;
  width: 36rpx;
  background: #f01414;
  border-radius: 2rpx;
}
.time {
  display: flex;
  margin: 40rpx auto;
  width: 240rpx;
  height: 64rpx;
  border: 1px solid #71777d;
  border-radius: 8rpx;
  font-size: 28rpx;
}
.period {
  flex: 1;
  height: 52rpx;
  line-height: 52rpx;
  margin: 6rpx;
  background: #fff;
  text-align: center;
  color: #71777d;
  border-radius: 6rpx;
}
.time-active {
  background: #71777d;
  color: #fff;
}
.list {
  margin-top: 24rpx;
}
.item {
  margin: 0 48rpx 40rpx 48rpx;
  display: flex;
}
.item-image {
  width: 180rpx;
  height: 120rpx;
  border-radius: 8rpx;
}
.item-title {
  flex: 1;
  display: table;
  height: 120rpx;
  margin-left: 24rpx;
  margin-right: 48rpx;
}
.item-title-inner {
  flex: 1;
  display: table-cell;
  line-height: 40rpx;
  font-size: 28rpx;
  color: #2b333b;
  vertical-align: middle;
  word-break: break-all;
}
.item-number {
  width: 60rpx;
}
.item-number-img {
  width: 60rpx;
  height: 52rpx;
  margin-right: 48rpx;
  margin-top: 30rpx;
}
.item-number-common {
  font-size: 36rpx;
  color: #71777d;
  line-height: 40rpx;
  margin-right: 20rpx;
  margin-top: 30rpx;
  text-align: right;
}